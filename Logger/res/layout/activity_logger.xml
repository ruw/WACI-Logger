<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <!--
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoggerActivity" >

    -->

    <Button
        android:id="@+id/Stop"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/Start"
        android:layout_marginRight="53dp"
        android:text="@string/button_stop" />

    <Button
        android:id="@+id/Start"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="165dp"
        android:layout_toLeftOf="@+id/Stop"
        android:text="@string/button_start" />

	<RadioGroup
	    android:id="@+id/optState"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_above="@+id/Stop"
	    android:layout_centerHorizontal="true" >

	    <RadioButton
	        android:id="@+id/optNone"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:checked="true"
	        android:text="@string/opt_none" />

	    <RadioButton
	        android:id="@+id/optPerf"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/opt_perf" />

	    <RadioButton
	        android:id="@+id/optPow"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/opt_pow" />
	</RadioGroup>

	<TextView
	    android:id="@+id/textView1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_above="@+id/optState"
	    android:layout_centerHorizontal="true"
	    android:text="@string/optimization"
	    android:textAppearance="?android:attr/textAppearanceLarge" />

	<ToggleButton
	    android:id="@+id/toggleButton"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/Start"
	    android:layout_alignRight="@+id/Stop"
	    android:layout_below="@+id/Start"
	    android:layout_marginTop="68dp"
	    android:text="@string/toggle_button" />

</RelativeLayout>